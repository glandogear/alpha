# girara options
set default-bg      "#000000"
set default-fg      "#DDDDDD"
set inputbar-bg     "#131313"
set inputbar-fg     "#FFFFFF"
set statusbar-bg    "#000000"
set statusbar-fg    "#FFFFFF"

set font            "Liberation Mono 14"
set guioptions      "sv"

# zathura options
set highlight-color         "#9FBC00"
set highlight-active-color  "#00BC00"
set highlight-transparency  0.5

set page-padding    2
set window-title-basename   "true"
set selection-clipboard     "clipboard"

set index-bg        "#232323"
set index-fg        "#DDDDDD"
set index-active-bg "#9FBC00"
set index-active-fg "#232323"

# shortcuts
unmap -
map + zoom in
map _ zoom out
